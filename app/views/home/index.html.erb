<center>
	<form action="/" method="post" enctype="multipart/form-data">
	<div style="width: 928px; height:426px; background:url(images/bg.jpg); padding-top:230px; text-align:left; padding-left:20px;">
		<du>
			<dt>File:</dt>
			<dd><%= file_field :upload, :file_data, :size => 6 %></dd>
		</du>
		<div style="clear:both; height:50px;"></div>
		<du>
			<dt>Email(s):</dt>
			<dd><input type="text" name="recipients"></dd>
		</du>
		
		<%= token_tag %>
		<div style="clear:both; height:40px;"></div>
		<input type="image" src="/images/submit.jpg" alt="Submit" style="margin-left:330px;">
		<div style="clear:both; height:40px;"></div>
		<div style="text-align: center"><script src="http://digg.com/tools/diggthis.js" type="text/javascript"></script></div>
	</div>
	</form>
	
</center>